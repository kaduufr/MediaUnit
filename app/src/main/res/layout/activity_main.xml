<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a03777501.mediaunit.MainActivity"
    android:background="#58e0d3d3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Media Unit"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:background="#9deaa5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Primeira Nota"
        android:id="@+id/lblNota1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:textSize="30dp"
        android:background="#92c2f9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota01"
        android:layout_below="@+id/lblNota1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:layout_alignParentTop="false"
        android:paddingTop="13dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Segunda Nota"
        android:id="@+id/lblNota2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/nota01"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="#f38a8f"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/nota02"
        android:layout_below="@+id/lblNota2"
        android:layout_alignEnd="@+id/nota01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:paddingTop="13dp"
        android:background="#fff"
        android:paddingBottom="12dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btnCalcular"
        android:layout_marginStart="39dp"
        android:textSize="20dp"
        android:padding="18dp"
        android:background="#f7bf92"
        android:layout_below="@+id/nota02"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:id="@+id/btnLimpar"
        android:layout_alignTop="@+id/btnCalcular"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:textSize="20dp"
        android:padding="18dp"
        android:background="#f7bf92" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado"
        android:id="@+id/lblResultado"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
